{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h3>Editar Postagem:</h3>

<div class="card">
  <div class="card-body">
    <form action="/admin/postagens/edit" method="POST">
      <input type="hidden" value="{{postagem._id}}" name="id">

      <label for="titulo">Título: </label>
      <input type="text" name="titulo" id="titulo" class="form-control" value="{{postagem.titulo}}"><br>

      <label for="slug">Slug: </label>
      <input type="text" name="slug" id="slug" class="form-control" value="{{postagem.slug}}"><br>

      <label for="conteudo">Conteúdo: </label>
      <textarea name="conteudo" id="conteudo" class="form-control">{{postagem.conteudo}}</textarea><br>

      <label for="categoria">Categoria: </label>
      <select name="categoria" class="custom-select">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select>

      <button type="submit" class="btn btn-success mt-4">Editar Postagem</button>
    </form>
  </div>
</div>

